    <script>
        function showSection(section) {
            const sections = {
                home: document.getElementById('home-info'),
                service: document.getElementById('service-info'),
                about: document.getElementById('about-info'),
                contact: document.getElementById('contact-info'),
                loadstring: document.getElementById('loadstring-info')
            };
            Object.values(sections).forEach(s => s.style.display = 'none');
            sections[section].style.display = 'block';
        }
    </script>
